{
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "__tests__",
    "**/*.test*",
    "**/*.spec*"
  ],
  "files": [],
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2019"],
    "allowJs": false,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "declaration": true,
    "declarationMap": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "moduleResolution": "node"
  }
}
